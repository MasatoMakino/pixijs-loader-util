{
  "name": "@masatomakino/pixijs-loader-util",
  "version": "0.2.1",
  "description": "Asset load helper for pixi.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/pixijs-loader-util.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "files": [
    "lib",
    "esm"
  ],
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.8.0",
    "@types/node": "^20.10.5",
    "@vitest/coverage-istanbul": "^1.0.4",
    "browser-sync": "^2.27.11",
    "canvas": "^2.11.2",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "selenium-webdriver": "^4.13.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "pixi.js": "^7.3.2"
  },
  "overrides": {
    "@types/css-font-loading-module": "^0.0.12"
  },
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage --run",
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --copyTargets png jpg jpeg mp4",
    "buildTS": "tsc --project tsconfig.cjs.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json",
    "selenium": "node ./selenium/test.js"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
