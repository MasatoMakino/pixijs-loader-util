{
  "name": "@masatomakino/pixijs-loader-util",
  "version": "0.1.2",
  "description": "Asset load helper for pixi.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/pixijs-loader-util.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.41",
    "dat.gui": "^0.7.9",
    "@masatomakino/gulptask-demo-page": "0.4.4",
    "@masatomakino/gulptask-dev-server": "0.4.1",
    "husky": "^8.0.1",
    "pixi.js": "^6.4.2",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "selenium-webdriver": "^4.2.0",
    "serve": "^13.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "pixi.js": "^6.4.2"
  },
  "scripts": {
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --copyTargets png jpg jpeg mp4",
    "buildTS": "npx tsc --project tsconfig.cjs.json & npx tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "npx tsc -W --incremental --project tsconfig.cjs.json & npx tsc -W --incremental --project tsconfig.esm.json",
    "selenium": "node ./selenium/test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
